# Example GitHub Actions workflow for faiss-go
# Rename to test.yml when ready to use

name: Test

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  test-source:
    name: Test (Source Build)
    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest]
        go: ['1.21', '1.22', '1.23']
    runs-on: ${{ matrix.os }}

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: ${{ matrix.go }}

    - name: Install dependencies (Ubuntu)
      if: runner.os == 'Linux'
      run: |
        sudo apt-get update
        sudo apt-get install -y libopenblas-dev cmake build-essential

    - name: Install dependencies (macOS)
      if: runner.os == 'macOS'
      run: |
        brew install openblas cmake

    - name: Build
      run: go build -v ./...

    - name: Test
      run: go test -v -race ./...

    - name: Benchmark
      run: go test -bench=. -benchmem ./...

  test-prebuilt:
    name: Test (Pre-built Libraries)
    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
        go: ['1.21', '1.22', '1.23']
    runs-on: ${{ matrix.os }}

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: ${{ matrix.go }}

    - name: Build with pre-built libs
      run: go build -tags=faiss_use_lib -v ./...

    - name: Test with pre-built libs
      run: go test -tags=faiss_use_lib -v ./...

  lint:
    name: Lint
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: '1.23'

    - name: Install linters
      run: |
        go install honnef.co/go/tools/cmd/staticcheck@latest

    - name: Run go vet
      run: go vet ./...

    - name: Run staticcheck
      run: staticcheck ./...

    - name: Check formatting
      run: |
        if [ "$(gofmt -s -l . | wc -l)" -gt 0 ]; then
          echo "Code is not formatted:"
          gofmt -s -l .
          exit 1
        fi
